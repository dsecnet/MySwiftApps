# CoreVia Backend - Environment Variables
# Copy this file to .env and fill in your values

# App
APP_NAME=CoreVia
DEBUG=True

# CORS Origins (comma separated)
# Development: localhost
# Production: your domains
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/corevia_db

# JWT Security
# IMPORTANT: Generate a strong random secret key for production!
# Example: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AWS S3 (File uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=corevia-uploads
AWS_REGION=eu-central-1

# OpenAI API (AI features)
OPENAI_API_KEY=your-openai-api-key

# Redis (Cache & Rate Limiting)
REDIS_URL=redis://localhost:6379/0

# Mapbox (Maps & Routes)
MAPBOX_ACCESS_TOKEN=your-mapbox-token

# Firebase (Push Notifications)
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json

# Apple In-App Purchase
# Get shared secret from App Store Connect
APPLE_SHARED_SECRET=your-apple-shared-secret
APPLE_USE_PRODUCTION=False  # Set to True in production
